<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <solid android:color="@drawable/default_icon_foreground" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="270"
                    android:endColor="@drawable/green_light"
                    android:startColor="@drawable/green_mid" />
            </shape>
        </clip>
    </item>

</layer-list>